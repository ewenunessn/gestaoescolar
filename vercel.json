{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "installCommand": "cd api && npm install",
  "buildCommand": "mkdir -p public && echo 'API' > public/index.html",
  "outputDirectory": "public"
}