{
  "version": 2,
  "installCommand": "cd backend && npm install",
  "buildCommand": "echo 'Backend ready'",
  "devCommand": "cd backend && npm run dev",
  "framework": null,
  "outputDirectory": "backend",
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index"
    }
  ]
}
