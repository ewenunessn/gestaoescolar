{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ],
  "installCommand": "cd api && npm install",
  "buildCommand": "echo 'Serverless - no build needed'",
  "outputDirectory": "api",
  "framework": null
}
