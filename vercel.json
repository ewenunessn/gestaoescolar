{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ],
  "github": {
    "silent": true
  },
  "installCommand": "npm install --prefix api",
  "buildCommand": "echo 'No build needed for serverless'",
  "outputDirectory": "api"
}
