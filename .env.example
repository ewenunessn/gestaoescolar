# Configuração do Sistema de Alimentação Escolar
# Copie este arquivo para .env e ajuste as configurações

# Ambiente
NODE_ENV=development

# Configuração do Servidor Backend
HOST=localhost
PORT=3000

# Configuração do Banco PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alimentacao_escolar
DB_USER=postgres
DB_PASSWORD=admin123
DB_SSL=false

# Configuração JWT
JWT_SECRET=seu-jwt-secret-super-seguro-aqui
JWT_EXPIRES_IN=24h

# Configuração de Upload
UPLOADS_PATH=./uploads
MAX_FILE_SIZE=10485760

# Configuração do Frontend (para desenvolvimento)
VITE_API_URL=http://localhost:3000/api
VITE_MOCK_DATA=false